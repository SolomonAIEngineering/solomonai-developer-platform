{
  "configurations": [
    {
      "name": "Debug Vitest",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "timeout": 30000, // Adjust as needed for longer tests
      "skipFiles": ["<node_internals>/**"],
      "autoAttachChildProcesses": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
